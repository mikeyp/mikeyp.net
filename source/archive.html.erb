---
title: Archives
background_color: "#58940B"
---

<h1>Articles</h1>

<% grouped_articles = blog.articles.group_by { |article| article.date.strftime('%Y')} %>
<% grouped_articles.each do |key, articles| %>
  <h3><%= key %></h3>
  <% articles.each do |article| %>
    <p><a href="<%= url_for(article) %>"><%= article.data.title %></a></p>
  <% end %>
<% end %>

<% content_for :per_page_header do %>
  <% if current_page.data.background_color %>
    <style>
      article.wrapper {
        background-color: <%= current_page.data.background_color %>;
      }
    </style>
  <% end %>
<% end %>